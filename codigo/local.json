{
    "doctype": "html",
    "lang": "pt-BR",
    "head": {
      "meta": [
        {
          "charset": "UTF-8"
        },
        {
          "name": "viewport",
          "content": "width=device-width, initial-scale=1.0"
        }
      ],
      "title": "Saldinhas",
      "link": [
        {
          "rel": "stylesheet",
          "href": "local.css"
        },
        {
          "rel": "stylesheet",
          "href": "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        }
      ]
    },
    "body": {
      "header": {
        "div": [
          {
            "class": "logo",
            "img": {
              "src": "logo.jpg",
              "alt": "logo"
            }
          },
          {
            "class": "search-bar",
            "input": {
              "type": "text",
              "id": "search-input",
              "placeholder": "Buscar..."
            },
            "img": {
              "src": "lupa.jpg",
              "alt": "Lupa"
            }
          },
          {
            "class": "icons",
            "button": {
              "class": "btn btn-danger",
              "text": "Login"
            }
          }
        ]
      },
      "div": [
        {
          "class": "sidebar",
          "a": [
            {
              "href": "#",
              "icon": "fas fa-user",
              "text": "Perfil"
            },
            {
              "href": "cap.html",
              "icon": "fas fa-utensils",
              "text": "Cardápio"
            },
            {
              "href": "#",
              "icon": "fas fa-calendar-alt",
              "text": "Reservas"
            },
            {
              "href": "#",
              "icon": "fas fa-tags",
              "text": "Promoções"
            },
            {
              "href": "#",
              "icon": "fas fa-map-marker-alt",
              "text": "Localização"
            },
            {
              "href": "#",
              "class": "logout",
              "icon": "fas fa-sign-out-alt",
              "text": "Log out"
            }
          ]
        },
        {
          "class": "content",
          "h2": ["Bon appétit!", "Localização"],
          "div": [
            {
              "class": "location-container",
              "div": [
                {
                  "class": "location-info",
                  "input": [
                    {
                      "type": "text",
                      "value": "Rua: Santa Maria das Graças, 156",
                      "readonly": true
                    },
                    {
                      "type": "text",
                      "value": "Bairro: Santa Tereza",
                      "readonly": true
                    },
                    {
                      "type": "text",
                      "value": "Cidade: Belo Horizonte",
                      "readonly": true
                    },
                    {
                      "type": "text",
                      "value": "CEP: 31010-030",
                      "readonly": true
                    },
                    {
                      "type": "text",
                      "value": "Estado: Minas Gerais",
                      "readonly": true
                    }
                  ]
                },
                {
                  "class": "map",
                  "img": {
                    "src": "mapa.jpg",
                    "alt": "Mapa ilustrando a localização do restaurante"
                  }
                }
              ]
            },
            {
              "class": "contacts",
              "p": [
                "Contatos:",
                "Número: 31-12345-6789",
                "Email: bonappetit@gmail.com"
              ]
            }
          ]
        }
      ],
      "script": {
        "function": "search",
        "content": "const query = document.getElementById('search').value; alert('Você buscou por: ' + query);"
      }
    }
  }
  